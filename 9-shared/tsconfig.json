{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "cjs",
    "rootDir": "src",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "pretty": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
